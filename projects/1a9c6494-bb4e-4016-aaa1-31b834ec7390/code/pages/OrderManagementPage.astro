---
import BaseLayout from '@/layouts/BaseLayout.astro'
import Header from '@/components/common/Header.vue'
import Footer from '@/components/common/Footer.vue'
import OrderList from '@/components/OrderManagementPage/OrderList.vue'
import { MOCK_ORDERS } from '@/data/OrderManagementPage'
---

<BaseLayout title="订单管理">
  <Header client:load />
  
  <main class="flex-1">
    <div class="container mx-auto px-4 py-8">
      <OrderList 
        client:load 
        orders={MOCK_ORDERS}
      />
    </div>
  </main>

  <Footer client:load />
</BaseLayout>

<style>
  main {
    min-height: calc(100vh - 8rem);
  }
</style>