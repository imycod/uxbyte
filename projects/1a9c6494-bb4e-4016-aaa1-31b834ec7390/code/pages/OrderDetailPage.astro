---
import BaseLayout from '@/layouts/BaseLayout.astro'
import Header from '@/components/common/Header.vue'
import Footer from '@/components/common/Footer.vue'
import OrderDetail from '@/components/OrderDetailPage/OrderDetail.vue'
import { MOCK_ORDER_DETAIL } from '@/data/OrderDetailPage'
---

<BaseLayout title="订单详情">
  <Header client:load />
  
  <main class="flex-1">
    <div class="container mx-auto px-4 py-8">
      <OrderDetail 
        client:load 
        order={MOCK_ORDER_DETAIL}
      />
    </div>
  </main>

  <Footer client:load />
</BaseLayout>

<style>
  main {
    min-height: calc(100vh - 8rem);
  }
</style>